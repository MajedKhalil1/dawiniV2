<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_page">

    <Button
        android:id="@+id/RequestMedecine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="174dp"
        android:background="@drawable/request_medecine_button" />

    <Button
        android:id="@+id/DeliverMedecine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/RequestMedecine"
        android:layout_marginTop="174dp"
        android:background="@drawable/deliver_medecine"
        />

    <Button
        android:id="@+id/MyRequest"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RequestMedecine"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/myrequest" />

    <Button
        android:id="@+id/ActiveDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DeliverMedecine"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/MyRequest"
        android:background="@drawable/active_delivery" />
</RelativeLayout>