<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/welcome_page"
    >




    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Get Started !"
        android:layout_marginVertical="450dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center"
        android:background="@drawable/button"
        android:textColor="#005500"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"
        android:textSize="20sp"

    />

    <TextView
        android:id="@+id/txtDontHaveAnAccount"
        android:layout_below="@id/btnGetStarted"
        android:layout_marginTop="-380dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textViewStyle"
        android:text="Donâ€™t Have an account ? "
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/textSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDontHaveAnAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        style="@style/textViewStyle"
        android:text="Sign Up here"
        android:textSize="22sp"
        />

</RelativeLayout>