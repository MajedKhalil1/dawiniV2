<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CustomTextBox3"
    >

    <TextView
        android:id="@+id/txtClientName"
        style="@style/CustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:elevation="100dp"
        android:gravity="center"
        android:text="Fatat Tarraf: " />

    <TextView
        android:id="@+id/txtRequestId"
        style="@style/CustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="190dp"
        android:layout_toRightOf="@id/txtClientName"
        android:elevation="100dp"
        android:gravity="center"
        android:text="#0001" />

    <TextView
        android:id="@+id/txtMedicineList"
        style="@style/CustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/txtClientName"
        android:layout_marginLeft="10dp"
        android:elevation="100dp"
        android:gravity="center"
        android:text="2 Panadol" />



</RelativeLayout>